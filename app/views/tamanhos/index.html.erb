<p id="notice"><%= notice %></p>

<h1>Tamanhos</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tamanhos.each do |tamanho| %>
      <tr>
        <td><%= tamanho.numero %></td>
        <td><%= link_to 'Show', tamanho %></td>
        <td><%= link_to 'Edit', edit_tamanho_path(tamanho) %></td>
        <td><%= link_to 'Destroy', tamanho, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

